@model CIS.Models.Account

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<div style="margin:auto">
    <div class="row">
        <div class="col-md-8 m-auto">
            <div class="card">
                <div class="card-header">
                    <h6 class="card-title">Edit</h6>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row mb-2 g-2">
                            <div class="col-md-6">
                                @Html.LabelFor(model => Model.HolderID, htmlAttributes: new { @class = "form-label" })
                                @Html.DropDownListFor(model => Model.HolderID, new CIS.Models.Contact().ListEmployee(), "Select Employee", new { @class = "form-select mb-2" })
                                @Html.ValidationMessageFor(model => Model.HolderID, "", new { @class = "text-danger" })
                            </div>
                            
                            <div class="col-md-12">
                                <input type="submit" name="name" value="Save" class="btn btn-primary" />
                                @Html.ActionLink("Back to List", "Select", "Account", "", new { @class = "btn btn-secondary" })
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>