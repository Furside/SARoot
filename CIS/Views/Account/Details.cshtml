@model CIS.Models.Account

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div class="row mb-3">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h6 class="card-title">Profile</h6>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row mb-2 g-2">
                        <div class="col-md-12">
                            <div class="form-label">HolderID</div>
                            <div class="row form-control" style="--bs-gutter-x: 0">@Model.HolderID </div>
                        </div>
                        <div class="col-md-12">
                            <label>HolderType</label>
                            <div class="row form-control" style="--bs-gutter-x: 0">@Model.HolderType</div>
                        </div>

                        <div class="col-md-12">
                            @Html.ActionLink("Back to List", "Select", "Account", "", new { @class = "btn btn-secondary" })
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>